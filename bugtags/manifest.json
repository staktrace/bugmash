{
  "manifest_version": 2,
  "name": "BugTags",
  "version": "1.0",

  "description": "Displays tags associated with bugs on bugzilla pages.",

  "content_scripts": [
    {
      "matches": ["https://bugzilla.mozilla.org/*"],
      "js": ["bugtags.user.js"]
    }
  ],

  "permissions": [
    "https://example.com/*",
  ]
}
